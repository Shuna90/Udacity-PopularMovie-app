<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_detail_cardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/keyline_1_difference"
    android:paddingLeft="@dimen/keyline_1_difference"
    android:paddingTop="@dimen/keyline_1_difference"
    android:paddingBottom="@dimen/keyline_1_difference"
    android:layout_marginBottom="10dp"
    android:elevation="@dimen/appbar_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <include layout="@layout/movie_description"
        android:id="@+id/movie_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/movie_information"
        android:id="@+id/movie_detail_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_detail_description" />
    </LinearLayout>

</android.support.v7.widget.CardView >