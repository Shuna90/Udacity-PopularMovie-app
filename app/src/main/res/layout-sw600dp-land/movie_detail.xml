<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/movie_description_post_left"
    android:paddingLeft="@dimen/movie_description_post_left"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginBottom="10dp"
    android:elevation="@dimen/appbar_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">

        <include layout="@layout/movie_description"
            android:id="@+id/movie_detail_description"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"/>

        <include layout="@layout/movie_information"
            android:id="@+id/movie_detail_information"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_below="@+id/movie_detail_description"/>
    </LinearLayout>

</android.support.v7.widget.CardView >